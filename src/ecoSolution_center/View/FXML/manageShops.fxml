<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="1080.0" prefWidth="1920.0" stylesheets="@../CSS/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ecoSolution_center.Controller.ManageShopsController">
   <children>
      <Button mnemonicParsing="false" onAction="#goToManageItems" prefHeight="110.0" prefWidth="960.0" text="Manage items">
         <font>
            <Font size="40.0" />
         </font>
      </Button>
      <Button layoutX="960.0" mnemonicParsing="false" prefHeight="110.0" prefWidth="960.0" text="Check shops">
         <font>
            <Font size="40.0" />
         </font>
      </Button>
      <TableView fx:id="tableview" layoutX="104.0" layoutY="495.0" prefHeight="563.0" prefWidth="760.0" stylesheets="@../CSS/tableView.css">
         <columns>
            <TableColumn fx:id="description_column" prefWidth="190.0" text="Description" />
            <TableColumn fx:id="itemStatus_column" prefWidth="190.0" text="Item status" />
            <TableColumn fx:id="clothingType_column" prefWidth="190.0" text="Clothing type" />
            <TableColumn fx:id="itemID_column" prefWidth="190.0" text="Item ID" />
         </columns>
      </TableView>
      <Button layoutX="526.0" layoutY="223.0" mnemonicParsing="false" onAction="#go" prefHeight="40.0" prefWidth="100.0" stylesheets="@../CSS/button.css" text="GO">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <TextField fx:id="shopID_textfield" layoutX="104.0" layoutY="223.0" prefHeight="40.0" prefWidth="370.0" promptText="Enter shop ID">
         <font>
            <Font size="20.0" />
         </font>
      </TextField>
      <Label fx:id="amount_label" layoutX="104.0" layoutY="300.0" text="Amount of laundry items in shop: ">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
